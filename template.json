{
  "id": "template-docker-single-user",
  "name": "Docker + OAuth2.1 + Single User (SQLite)",
  "description": "Single user OAuth2.1 MCP server with API key authentication using SQLite database",
  "version": "1.0.0",
  "mcpressoVersion": "^0.8.0",
  "category": "docker",
  "authType": "oauth",
  "complexity": "easy",
  "features": [
    "OAuth2.1 authentication",
    "SQLite database (file-based)",
    "Single user with API key",
    "Express.js server",
    "Production ready"
  ],
  "requirements": [
    "Node.js 18+",
    "npm or yarn"
  ],
  "envVars": [
    {
      "name": "JWT_SECRET",
      "description": "Secret key for JWT tokens",
      "required": true,
      "example": "your-secure-secret-key-here"
    },
    {
      "name": "API_KEY",
      "description": "API key for single user authentication",
      "required": true,
      "example": "your-api-key-here"
    },
    {
      "name": "PORT",
      "description": "Server port",
      "required": false,
      "default": "3000"
    },
    {
      "name": "SERVER_URL",
      "description": "Base URL of your server",
      "required": true,
      "example": "http://localhost:3000"
    },
    {
      "name": "DB_PATH",
      "description": "Path to SQLite database file",
      "required": false,
      "default": "data/app.db"
    }
  ],
  "resourceFolders": ["src/resources"],
  "configFiles": [
    "package.json",
    "tsconfig.json",
    "env.example"
  ]
}
